{
  "compilerOptions": {
    "target": "es6",
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@config": [
        "./config"
      ],
      "@config/*": [
        "./config/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}